{
  "name": "utiva",
  "version": "1.0.0",
  "description": "utiva backend application",
  "author": "Nonso, Amos",
  "license": "ISC",
  "scripts": {
    "start": "node dist/index",
    "migrate_test": "cross-env NODE_ENV=test sequelize db:migrate",
    "migrate_test:undo": "cross-env NODE_ENV=test sequelize db:migrate:undo:all",
    "pretest": "npm run migrate_test:undo && npm run migrate_test",
    "test": "jest --detectOpenHandles --verbose --coverage --forceExit",
    "client": "cd site && npm run dev",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev_start": "concurrently --kill-others-on-fail \"npm run start\" \"npm run client\"",
    "server": "cross-env-shell NODE_ENV=development && set DEBUG=dev & nodemon --exec babel-node server/index.js",
    "migrate": "cross-env sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "seed": "sequelize db:seed:all",
    "seed:undo": "sequelize db:seed:undo",
    "heroku-postbuild": "cd site && npm install --only=dev && npm install && npm run build && cd ../ && babel server --copy-files --out-dir dist && cross-env NODE_ENV=production sequelize db:migrate",
    "build": "babel server --copy-files --out-dir dist && cross-env NODE_ENV=production sequelize db:migrate",
    "client_build": "cd site && npm i && npm run build",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.1",
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "faker": "^4.1.0",
    "jest": "^25.5.4",
    "nodemon": "^2.0.6",
    "supertest": "^4.0.2",
    "supertest-session": "^4.1.0"
  },
  "dependencies": {
    "@amcharts/amcharts4": "^4.10.10",
    "@babel/polyfill": "^7.12.1",
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cloudinary": "^1.23.0",
    "connect-pg-simple": "^6.2.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "cryptr": "^6.0.2",
    "debug": "^4.2.0",
    "dotenv": "^8.2.0",
    "easy-rbac": "^3.1.1",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-form-data": "^2.0.14",
    "express-session": "^1.17.1",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "os": "^0.1.1",
    "paginate-info": "^1.0.4",
    "pg": "^8.5.0",
    "react-js-pagination": "^3.0.3",
    "sendgrid": "^5.2.3",
    "sequelize": "^5.22.3",
    "sequelize-cli": "^5.5.1",
    "sequelize-slugify": "^0.9.1",
    "sinon": "^9.2.1",
    "socket.io": "^2.3.0",
    "uuid": "^8.3.1",
    "yamljs": "^0.3.0"
  }
}
